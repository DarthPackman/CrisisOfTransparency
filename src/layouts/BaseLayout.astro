---
const { title, children, startColor, endColor, headImage } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{title}</title>
        <link rel="stylesheet" href="src/styles/base.css">
    </head>
    <body style={`--start-color: ${startColor}; --end-color: ${endColor};`}>
        <div id="content">
            <header>
                {headImage && <img src={headImage.src} alt={headImage.alt} />}
                <h1>{title}</h1>
            </header>
            <main>
                {children}
                <slot>
                </slot>
            </main>
        </div>
    </body>
</html>
