---
const { title,  startColor, endColor, imgURL} = Astro.props;
import { ViewTransitions } from "astro:transitions";
import "./transitions.css";
---

<!doctype html>
<html lang="en" transition:animate="none">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body style={`--start-color: ${startColor}; --end-color: ${endColor}; --imgURL: ${imgURL}`}>
		<div>
			<slot>
			</slot>
		</div>
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	h1
	{
		margin: 0px;
	}
	html {
		font-family: system-ui, sans-serif;
		background-size: cover;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	.instruction
	{
		font-size: 0.5rem ;
		position: fixed;
		display: inherit;
		margin-top: 29rem;
		margin-left: 29.5rem;
	}
	
	.vid
	{
		margin-top: 29rem;
		margin-left: 2rem;
	}

	#mainTitle
	{
		text-align: center;
		font-size: 10rem;
		padding-top: 30rem;
		padding-left: 55rem;
		position: fixed;
	}
</style>
