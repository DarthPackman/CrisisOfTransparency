---

const { frontTitle, frontContent, backTitle, backContent, backLink } = Astro.props;
---


<div class="flip-card">
	<input type ="checkbox" class="flipTrigger">
    <div class="flip-card-inner">
        <div class="flip-card-front">
            <p class="title">{frontTitle}</p>
            <p>{frontContent}</p>
        </div>
		
        <div class="flip-card-back">
            <p class="title">{backTitle}</p>
			<p>{backContent}</p>
            <a href={backLink}>Learn More</a>
        </div>
    </div>
	</input>
</div>

<style>
	.flip-card {
	padding-top: 9vh;
    padding-left: 9vh;
    background-color: transparent;
    width: 55vh;
    height: 55vh;
    font-family: sans-serif;
	transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	
	.flipTrigger: checked {
		transform: rotateY(180deg);
	}

	.flip-card-front, .flip-card-back {
		position: absolute;
		display: flex;
		flex-direction: column;
		justify-content: center;
		-webkit-backface-visibility: hidden;
		backface-visibility: hidden;
		border-radius: 1rem;
	}


	.flip-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}

	.flip-card-inner {
		height: 100%;
    	width: 100%;
    	text-align: center;
	}
	
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
